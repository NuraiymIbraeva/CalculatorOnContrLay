<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/numberField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintRight_toLeftOf="@id/eight"
        app:layout_constraintTop_toBottomOf="@+id/numberField"
        android:text="@string/seven"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        android:text="4"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/Four"
        android:text="1"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/Zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/one"
        android:text="0"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/numberField"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        android:text="8"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"/>


    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/eight"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/five"
        app:layout_constraintLeft_toRightOf="@+id/one"
        android:text="2"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/comma"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/two"
        app:layout_constraintLeft_toRightOf="@+id/Zero"
        android:text=","
        android:textSize="30sp"
       />

    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/numberField"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        android:text="9"
        android:textSize="30sp"
       />

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/nine"
        app:layout_constraintLeft_toRightOf="@+id/five"
        android:text="6"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/six"
        app:layout_constraintLeft_toRightOf="@+id/two"
        android:text="3"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/three"
        app:layout_constraintLeft_toRightOf="@+id/comma"
        android:text="+"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/division"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/numberField"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        android:text="/"

        android:textSize="30sp"
        />
    <Button
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/division"
        app:layout_constraintLeft_toRightOf="@+id/six"
        android:text="*"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/minus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/multiply"
        app:layout_constraintLeft_toRightOf="@+id/three"
        android:text="-"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/equally"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintLeft_toRightOf="@+id/plus"
        android:text="="
        android:textSize="30sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>